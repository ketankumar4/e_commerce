<%= @product.name %>
<br />
<%= @seller.email %>
<br />
<%= current_customer.email %>

<%= form_with model: [ current_customer, current_customer.orders.build ] do |form| %>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
  <%= form.hidden_field :product_id, :value => @product.id %>
  <p>
    <%= form.submit %>
  </p>
<% end %>